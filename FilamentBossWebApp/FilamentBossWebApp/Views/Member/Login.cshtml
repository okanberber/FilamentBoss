@model FilamentBossWebApp.Models.ViewModels.MemberLoginViewModel
@{
    ViewBag.Title = "Kullanıcı Giriş";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@section styles
{
    <link href="~/Assets/css/MemberLogin.css" rel="stylesheet" />
}
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row" style="text-align:center">
            <h2>Giriş Yap</h2>
        </div>
        <div class="row" style="text-align:center">
            Lütfen bilgileri eksiksiz doldurun
        </div>
        if (TempData["info"] != null)
        {
            <div class="validation-summary-success">
                @TempData["info"]
                @{
                    TempData["info"] = null;
                }
            </div>
        }
        if (ViewBag.basarisiz != null)
        {
            <div class="validation-summary-errors">
                @ViewBag.basarisiz
            </div>
        }
        if (ViewBag.basarili != null)
        {
            <div class="validation-summary-success">
                @ViewBag.basarili
            </div>
        }

        <div class="row">
            @Html.EditorFor(x => x.Mail, "", new { htmlAttributes = new { @class = "formTextbox", @placeholder = "Mail Adresiniz" } })
            @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "validationmesage" })
        </div>
        <div class="row">
            @Html.EditorFor(x => x.Password, "", new { htmlAttributes = new { @class = "formTextbox", @placeholder = "Şifreniz" } })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "validationmesage" })
        </div>

        <div class="row">
            <input type="submit" value="Giriş Yap" class="loginButton" />
        </div>
    }
</div>

